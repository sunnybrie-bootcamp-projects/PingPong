@model PingPong.Models.Game

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Game</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="TeamA" class="control-label"></label>
                <select asp-for="TeamA" class="form-control" asp-items="ViewBag.TeamA"></select>
                <span asp-validation-for="TeamA" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TeamB" class="control-label"></label>
                <select asp-for="TeamB" class="form-control" asp-items="ViewBag.TeamB"></select>
                <span asp-validation-for="TeamB" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WinScore" class="control-label"></label>
                <input asp-for="WinScore" class="form-control" />
                <span asp-validation-for="WinScore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LoseScore" class="control-label"></label>
                <input asp-for="LoseScore" class="form-control" />
                <span asp-validation-for="LoseScore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Victor" class="control-label"></label>
                <select asp-for="Victor" class="form-control" asp-items="ViewBag.Victor"></select>
                <span asp-validation-for="Victor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
