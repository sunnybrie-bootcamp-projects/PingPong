@model IEnumerable<PingPong.Models.Game>

@{
    ViewData["Title"] = "Games Index";
}
<h1>Games</h1>

<p>
    <a asp-action="Create" asp-route-id="1">Create New Singles Game</a>
    <br/>
    <a asp-action="Create" asp-route-id="2">Create New Doubles Game</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeamA)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeamB)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WinScore)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LoseScore)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Victor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TeamA)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TeamB)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WinScore)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LoseScore)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Victor)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
